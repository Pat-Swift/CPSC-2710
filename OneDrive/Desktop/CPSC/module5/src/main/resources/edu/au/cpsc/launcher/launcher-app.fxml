<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="edu.au.cpsc.launcher.LauncherController"
          xmlns:fx="http://javafx.com/fxml"
          id="launcher-root"
          hgap="10" vgap="10"
          alignment="CENTER"
          prefWidth="400" prefHeight="400"

>

    <children>
        <Button fx:id="airportsBtn" text="Airports" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Button fx:id="seatReservationsBtn" text="Seat Reservations" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Button fx:id="flightScheduleBtn" text="Flight Schedule" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Button fx:id="aircraftBtn" text="Aircraft" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </children>
</GridPane>
