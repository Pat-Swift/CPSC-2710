<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="cpsc.module3.AirportController">
  <top>
    <VBox spacing="10.0">
      <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
      </padding>
      <Label text="Airport Data Viewer" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

      <HBox spacing="10.0">
        <VBox spacing="5.0">
          <Label text="Ident:" />
          <TextField fx:id="identField" onAction="#handleSearch" />
        </VBox>
        <VBox spacing="5.0">
          <Label text="IATA Code:" />
          <TextField fx:id="iataField" onAction="#handleSearch" />
        </VBox>
        <VBox spacing="5.0">
          <Label text="Local Code:" />
          <TextField fx:id="localField" onAction="#handleSearch" />
        </VBox>
        <Button text="Search" onAction="#handleSearch" />
      </HBox>

      <GridPane hgap="10.0" vgap="10.0">
        <padding>
          <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <Label text="Type:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="typeField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Elevation:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="elevationField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Country:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="countryField" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Region:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="regionField" editable="false" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Municipality:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <TextField fx:id="municipalityField" editable="false" GridPane.rowIndex="5" GridPane.columnIndex="1" />
      </GridPane>
    </VBox>
  </top>

  <center>
    <!-- Placeholder for the map view (could be loaded with fx:include or set dynamically) -->
    <AnchorPane fx:id="mapPlaceholder" />
  </center>
</BorderPane>
